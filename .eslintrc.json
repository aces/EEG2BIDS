{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "globalReturn": false
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "google"],
  "rules": {
    "max-len": ["error", {
        "code": 80,
        "tabWidth": 2,
        "ignoreComments": true
    }],
    "react/no-unescaped-entities": "off",
    "react/prop-types": "off",
    "linebreak-style": "off",
    "spaced-comment": "off",
    "no-unused-vars": "off",
    "require-jsdoc": "error",
    "no-console": ["warn", {
      "allow": ["info", "warn", "error"]
    }]
  },
  "globals": {
    "React": true,
    "ReactDOM": true
  }
}
